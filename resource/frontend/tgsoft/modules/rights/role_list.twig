{% extends basicSite %}

{% block navigation_main %}{{ parent() }}{% endblock %}

{% block content %}
    {% if ( myModules.TGSoft_Roles.add == 1 ) %}
        {% if ( myModules.TGSoft_Account.add == 1 ) %}
            <a href="{{prefix}}/backend/roles/details/0">
                <button class="btnAdd default_style1" roleId="0">Neu anlegen</button>
            </a>
        {% endif %}
    {% endif %}

    <table id="tbl_roles" class="tblsorter tablesorter-blue">
        <thead>
            <tr>
                <th class="col_id">ID</th>
                <th class="col_name">Name</th>
                <th class="col_active">Active</th>
                <th class="col_options">Options</th>
            </tr>
        </thead>
        <tbody>
            {% for role in lstRoles %}
                <tr>
                    <td class="col_id">{{ role.id }}</td>
                    <td class="col_name">{{ role.name }}</td>
                    <td class="col_active">{{ role.active }}</td>
                    <td class="col_options">
                    {% if ( myModules.TGSoft_Roles.change == 1 ) %}
                        <button class="btnChange default_style1" roleId="{{ role.id }}">Ã„ndern</button>
                    {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{prefix}}/tgsoft/modules/rights/assets/roles.css">
{% endblock %}

{% block javascript_intern %}
    {{ parent() }}
    <script type="text/javascript" src="{{prefix}}/tgsoft/modules/rights/assets/roles.js"></script>
{% endblock %}